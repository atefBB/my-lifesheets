{
	"app": {
		"name": "Pressurized",
		"slug": "pressurized",
		"entry_name": "measurement",
		"description": "blood pressure tracker",
		"private": false,
		"icon": "ðŸ«€",
		"color": "#6f923a",
		"storageType": "",
		"storage": "",
		"charts_placement": "",
		"entries_name": "measurements"
	},
	"temporal": {
		"times": "yes",
		"ranges": ""
	},
	"entry": [
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal",
				"deletable"
			],
			"settings": {
				"expression": "weekday(date, 'shortname')"
			},
			"name": "weekday"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"type": "date",
				"default": "[$today]",
				"formatting": [
					"b"
				]
			},
			"name": "date"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"prefix": " at ",
				"type": "time",
				"default": "[time($startup, 'hours')]",
				"format": "[time(time, 'minutes')]"
			},
			"name": "time"
		},
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"visible": "false",
				"expression": "date & if(time, 'T' & time)"
			},
			"name": "date_time"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"default": "",
				"max": 250
			},
			"name": "systolic"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"prefix": "/ ",
				"suffix": " mmHg",
				"default": "",
				"max": 200
			},
			"name": "diastolic"
		},
		{
			"type": "spacer",
			"scope": "entry",
			"settings": {}
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"expression": "if((130 < systolic or 80 < diastolic) and systolic < 140 and diastolic < 90, 'Hypertension Stage 1')",
				"text_color": "#e69100",
				"formatting": [
					"b"
				]
			}
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"expression": "if((140 <= systolic or 90 <= diastolic) and systolic < 180 and diastolic < 120, 'Hypertension Stage 2')",
				"text_color": "#e65d19",
				"formatting": [
					"b"
				]
			}
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"expression": "if(systolic >= 180 or diastolic >= 120, 'Hypertensive Crisis')",
				"text_color": "#cc0000",
				"formatting": [
					"b"
				]
			}
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"type": "text",
				"appearance": "line",
				"multiline": true
			},
			"name": "notes"
		}
	],
	"root": [
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"label": "Add measurement",
				"target": "add(entry)",
				"target_preset": "new",
				"appearance": "stretch",
				"set_pairs": []
			}
		}
	],
	"charts": [
		{
			"type": "chart",
			"scope": "charts",
			"settings": {
				"group_by": "day",
				"aggregate": "average",
				"type": "line",
				"aggregate_of": "systolic",
				"orientation": "horizontal"
			}
		},
		{
			"type": "chart",
			"scope": "charts",
			"settings": {
				"aggregate": "average",
				"aggregate_of": "diastolic",
				"group_by": "day",
				"type": "line",
				"orientation": "horizontal"
			}
		}
	]
}